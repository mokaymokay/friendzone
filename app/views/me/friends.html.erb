<%= get_current_local_time(current_user.time_zone).strftime('%b %e, %l:%M %p') %>

<h3>Your friends:</h3>
<% @friends.each do |f| %>
  <li><%= f.first_name %> <%= f.last_name %></li>
  <% if f.time_zone %>
  <p><%= get_current_local_time(f.time_zone).strftime('%b %e, %l:%M %p') %></p>
  <% end %>
<% end %>

<%= link_to "Log out", logout_path %>
