<%= get_current_local_time(current_user.time_zone).strftime('%b %e, %l:%M %p') %>

<h3>Your friends:</h3>
<div class="row">
  <% @friend_zones.each do |fz| %>
    <div class="col-sm">
      <%= fz %>
      <% friends_in_tz = @friends.select {|f| f.time_zone != nil && get_current_local_time(f.time_zone).strftime('%b %e, %l:%M %p') == fz } %>
      <% friends_in_tz.each do |f| %>
        <li><%= f.first_name %> <%= f.last_name %></li>
        <img src="<%= asset_path (f.photo['prefix'] + '100x100' + f.photo['suffix']) %>">
        <p><%= get_current_local_time(f.time_zone).strftime('%b %e, %l:%M %p') %></p>
      <% end %>
    </div>
  <% end %>
</div>

<%= link_to "Log out", logout_path %>
